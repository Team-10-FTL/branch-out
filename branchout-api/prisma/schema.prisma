generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
    id          Int      @id @default(autoincrement())
    username    String   @unique
    email       String   @unique
    password    String?  // Make optional for Clerk users
    clerkId     String?  @unique // Add this field
    provider    Provider @default(local) // "local" or "clerk"
    role        Role     @default(USER)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    feedback FeedBack[]
    savedRepos Repo[] @relation("savedRepos")
    languages String[]
    skill SkillLevel[]
    preferenceTags  String[]


}

enum SkillLevel{
    FIRSTYEAR
    SECONDYEAR
    THIRDYEAR
    FOURTHYEAR
}

enum Provider{
    local
    clerk
}

enum Role{
    USER
    ADMIN
}

enum Critique{
    NOTINTERESTED
    MISLEADING
    TOOCOMPLEX
    TOOEASY
}

model Repo{
    id Int @id @default(autoincrement())
    owner String
    name String
    stars Int
    languages String[]
    tags String[]
    topics String[]
    skill SkillLevel[] // AI assigned level
    summary String?
    description String
    savedBy User[] @relation("savedRepos")
    githubId Int @unique
    feedBack FeedBack[]
    repoLink String
}


// Feedback will be a later sprint feature
model FeedBack{
    id Int @id @default(autoincrement())
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId Int
    repo Repo @relation(fields: [repoId], references: [id], onDelete: Cascade)
    repoId Int
    swipeDirection String
    feedbackReason Critique?
}
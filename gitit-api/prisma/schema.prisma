generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
    id          Int      @id @default(autoincrement())
    userName    String   @unique
    email       String   @unique
    password    String?  // Make optional for Clerk users
    clerkId     String?  @unique // Add this field
    provider    Provider @default(local) // "local" or "clerk"
    role        Role     @default(USER)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    preferences String[]
    skillLevel  String?
    feedBack    FeedBack[]
    savedRepos Repo[] @relation("savedRepos")

}

enum Provider{
    local
    clerk
}

enum Role{
    USER
    ADMIN
}

model Repo{
    id Int @id @default(autoincrement())
    owner String
    name String
    stars Int
    languages String[]
    tags String[]
    topics String[]
    summary String?
    savedBy User[] @relation("savedRepos")
    githubId String @unique
    feedBack FeedBack[]
}


// Feedback will be a later sprint feature
model FeedBack{
    id Int @id @default(autoincrement())
    user User @relation(fields: [userId], references: [id])
    userId Int
    repo Repo @relation(fields: [repoId], references: [id])
    repoId Int
    swipeDirection String
    feedbackReason String?
}

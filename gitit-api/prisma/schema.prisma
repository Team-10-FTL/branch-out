generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
    id Int @id @default(autoincrement())
    clerkId String? // unused if bcrypt user
    provider Provider // local or clerk
    role Role @default(USER) // checks if user is admin or member
    userName String @unique
    password String? //unused if clerk user
    email String @unique
    skillLevel String?
    preferences String[]
    savedRepos Repo[] @relation("savedRepos")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    feedBack FeedBack[]
}

enum Provider{
    local
    clerk
}

enum Role{
    USER
    ADMIN
}

model Repo{
    id Int @id @default(autoincrement())
    owner String
    name String
    stars Int
    languages String[]
    tags String[]
    topics String[]
    summary String?
    savedBy User[] @relation("savedRepos")
    githubId String @unique
    feedBack FeedBack[]
}


// Feedback will be a later sprint feature
model FeedBack{
    id Int @id @default(autoincrement())
    user User @relation(fields: [userId], references: [id])
    userId Int
    repo Repo @relation(fields: [repoId], references: [id])
    repoId Int
    swipeDirection String
    feedbackReason String?
}
